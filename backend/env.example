# Currency Collector Environment Variables
# Copy this file to .env and configure your settings

# Shared password for web login
APP_PASSWORD=admin123

# Bearer token for programmatic API access (n8n)
API_TOKEN=your-secret-api-token

# Path to the CSV file
CSV_PATH=./sample_notes.csv

# Random string for signing session cookies
SESSION_SECRET=your-session-secret-key-change-this

# CORS origin (use * for development, specific domain for production)
ALLOW_ORIGIN=*
